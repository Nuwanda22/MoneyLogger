<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyLogger.InputPage">
	<ContentPage.Content>
		<StackLayout Padding="50" Spacing="20">

			<Label Text="Amount"/>
			<StackLayout Orientation="Horizontal">
				<Entry x:Name="AmountEntry" Keyboard="Numeric" WidthRequest="100" MinimumWidthRequest="100"/>
				
			</StackLayout>

			<Label Text="Place"/>
			<StackLayout Orientation="Horizontal">
				<Entry x:Name="PlaceEntry" WidthRequest="100" MinimumWidthRequest="100"/>
			</StackLayout>
			<Label Text="Set here"/>
			<Switch x:Name="PlaceSwitch"/>
<Button x:Name="AmountButton" Text="OK"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>